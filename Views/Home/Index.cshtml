@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                <form class="login100-form validate-form">
                    <span class="login100-form-title p-b-55">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="Valid email is required: ex@abc.xyz">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger ", @placeholder = "Email" })
                        <div class="form-group">

                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input100" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-envelope"></span>
                            </span>
                        </div>
                        @*<input class="input100" type="text" name="email" placeholder="Email">*@

                    </div>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                        <div class="form-group">

                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input100", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-lock"></span>
                            </span>
                        </div>
                        @*<input class="input100" type="password" name="pass" placeholder="Password">
            <span class="focus-input100"></span>
            <span class="symbol-input100">
                <span class="lnr lnr-lock"></span>
            </span>*@
                    </div>

                    <div class="form-group">
                        <div class="contact100-form-checkbox m-l-4">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "input-checkbox100", id= "ckb1" })
                            <label class="label-checkbox100" for="ckb1">
                                Remember me
                            </label>

                        </div>
                    </div>
                 

                    @*<div class="contact100-form-checkbox m-l-4">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>*@

                    <div class="container-login100-form-btn p-t-25">
                        <button class="login100-form-btn" type="submit">
                            Login
                        </button>
                    </div>

                    @*<div class="text-center w-full p-t-42 p-b-22">
