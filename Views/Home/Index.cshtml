                        <i class="fa fa-facebook-official"></i>
                        Facebook
                    </a>

                    <a href="#" class="btn-google m-b-10">
                        <img src="~/Content/images/icons/icon-google.png" />
                        Google
                    </a>*@

                    <div class="text-center w-full p-t-115">
                        <span class="txt1">
                            Not a member?
                        </span>

                        <div class="txt1 bo1 hov1">
                            <div class="container-login100-form-btn p-t-25">
                             
                                    @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { @class = "register-form-btn ", id = "registerLink" })
                            
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
